<log4net>
	<!-- Request Log -->
	<appender name="RequestFileAppender" type="log4net.Appender.RollingFileAppender">
		<file value="logs/transaction-request-log/request" />
		<appendToFile value="true" />
		<rollingStyle value="Date" />
		<datePattern value="yyyyMMdd'.log'" />
		<staticLogFileName value="false" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date %-5level %logger - %message%newline" />
		</layout>
	</appender>

	<!-- Response Log -->
	<appender name="ResponseFileAppender" type="log4net.Appender.RollingFileAppender">
		<file value="logs/transaction-response-log/response" />
		<appendToFile value="true" />
		<rollingStyle value="Date" />
		<datePattern value="yyyyMMdd'.log'" />
		<staticLogFileName value="false" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date %-5level %logger - %message%newline" />
		</layout>
	</appender>

	<!-- Error Log -->
	<appender name="ErrorFileAppender" type="log4net.Appender.RollingFileAppender">
		<file value="logs/transaction-error-log/error" />
		<appendToFile value="true" />
		<rollingStyle value="Date" />
		<datePattern value="yyyyMMdd'.log'" />
		<staticLogFileName value="false" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date %-5level %logger - %message%newline" />
		</layout>
	</appender>

	<!-- Loggers -->
	<logger name="RequestLogger">
		<level value="INFO" />
		<appender-ref ref="RequestFileAppender" />
	</logger>

	<logger name="ResponseLogger">
		<level value="INFO" />
		<appender-ref ref="ResponseFileAppender" />
	</logger>

	<logger name="ErrorLogger">
		<level value="ERROR" />
		<appender-ref ref="ErrorFileAppender" />
	</logger>
</log4net>
